---
export interface Props {
  body: string;
  link: string;
}

const { body, link } = Astro.props;
---

<a href={link} class="button">{body}</a>

<style>
  .button {
    background-color: #fff;
    padding: 5px;
    border-radius: 20px;
    font-size: 14pt;
    font-weight: 700;
    padding-left: 20px;
    padding-right: 20px;
    padding-bottom: 10px;
    border: 0;
    padding-top: 12px;
    height: 25px;
    width: 120px;
    cursor: pointer;
    text-decoration: none;
    color: #fb2576;
    transition-duration: 0.4s;
    text-align: center;
  }
  .button:hover {
    color: #fff;
    background-color: #fb2576;
  }
</style>
